{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.*": "Warning",
      "System.*": "Warning"
    }
  },

  "MDP.RoleAccesses": {
    "RoleAccessContext": {
      "PermissionRepository": "CachePermissionRepository",
      "AccessResultRepository": "MemoryAccessResultRepository"
    },
    "CachePermissionRepository": { "permissionRepository": "MemoryPermissionRepository" },
    "MemoryPermissionRepository": {
      "Permissions": [
        { "Role" : "Admin", "ResourceProvider": "MDP.RBAC.Service", "ResourceType": "Menu", "ResourcePath": "Users/Add"},
        { "Role" : "Admin", "ResourceProvider": "MDP.RBAC.Service", "ResourceType": "Menu", "ResourcePath": "Roles/*"},
        { "Role" : "User", "ResourceProvider": "MDP.RBAC.Service", "ResourceType": "Menu", "ResourcePath": "Users/List"},
        { "Role" : "User", "ResourceProvider": "MDP.RBAC.Service", "ResourceType": "Menu", "ResourcePath": "Users/Password/Reset"}
      ]
    },
    "EmptyAccessResultRepository": {},
    "MemoryAccessResultRepository": {}
  }
}